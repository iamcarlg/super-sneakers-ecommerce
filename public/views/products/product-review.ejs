<!-- Main Body -->

<%- include("../partials/nav.ejs") %>

<center>

  <section>
    <div class="container">
      <% if (review.length> 0) { %>
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4">
                <h1>Comments</h1>
                <% review.forEach(rev=> { %>  
                <div class="comment mt-4 text-justify float-left"> <img src="https://i.imgur.com/yTFUilP.jpg" alt="" class="rounded-circle" width="40" height="40">
                  <h4><%= rev.name %></h4> <span><%= rev.date %></span> <br>
                  <p v-for="items in item" v-text="items" class = "content-review" ><%= rev.msg %></p>
                </div>
                <% }) %>
                          
                <% } else { %>
                  There are no products to display...
                  <% } %>
  
              </div>

            <div class="col-lg-4 col-md-5 col-sm-4 offset-md-1 offset-sm-1 col-12 mt-4">
                <form id="algin-form" action = "/reviews/post" method = "post">
                    <div class="form-group">
                        <h4>Leave a comment</h4> <label for="message">Message</label> <textarea name="msg" id="" msg cols="30" rows="5" class="form-control" style="background-color: white;" required></textarea>
                    </div>
                    <div class="form-group"> <label for="name">Name</label> <input type="text" name="name" id="fullname" class="form-control" required  style="background-color: white;"> </div>
                    <div class="form-group"> <label for="email">Email</label> <input type="email" name="email" id="email" class="form-control" required  style="background-color: white;"> </div>
  
                    <div class="form-group"> <button type="submit" id="post" class="btn">Post Comment</button> </div>
                </form>
                
              </div>

        </div>
    </div>
  </section>

</center>

