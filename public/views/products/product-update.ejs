<%- include("../partials/head.ejs") %>
  <!-- NOTE IMPORTANT When updating the product, it reads in the wrong data. Price do not show and the size data reads in , in the price column on admin/products/ !! -->
  <!--This should be a modal-->
  <div class="container-fluid update-container">
    <%- include("../partials/nav.ejs") %>
      <div class="product-update-flex-parent">
        <div class="product-update-div">
          <div class="update-title-div">
            <h3>Update Product Details</h3>
          </div>

          <!-- Change class name -->
          <form action="/shop/update/<%=products._id %>?_method=PATCH" method="POST" enctype='multipart/form-data'>
            <!--Edit-form page to update a product-->
            <!--It needs to be products and not product becuase of the db, look it up!-->
            <label for="title">Title</label>
            <input type="text" class="form-control rounded-0" name="title" value="<%= products.title %>">
            <!--It needs to be products and not product becuase of the db, look it up!-->

            <label for="gender">Gender</label>
            <select class="form-control rounded-0" name="gender" value="<%= products.gender%>" placeholder="Gender">
              <option selected disabled></option>
              <option>Woman</option>
              <option>Man</option>
            </select>
            <label for="brand">Brand</label>
            <select class="form-control" name="brand" value="<%=products.brand%>">
              <option selected disabled></option>
              <option>Nike</option>
              <option>Adidas</option>
              <option>Reebok</option>
              <option>Puma</option>
              <option>New Balance</option>
              <option>Kappa</option>
              <option>Champion</option>
            </select>

            <label for="description">Description</label>
            <input type="text" class="form-control rounded-0" name="description" value="<%= products.description%>">

            <label for="price">Price</label>
            <input type="text" class="form-control rounded-0" name="price" value="<%= products.price%>">

            <label for="picture">Picture</label>
            <input type="file" class="form-control rounded-0"  name="picture" value="<%= products.picture%>" required>
            <div class="update-btn-holder">


              <button class="btn update-submit-btn rounded-0" type="submit">Update</button>
            </div>
          </form>
        </div>
      </div>
  </div>

  <%- include("../partials/footer.ejs") %>